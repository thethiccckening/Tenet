<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <View
        android:id="@+id/Sent_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="right">

        <View
            android:id="@+id/base2"
            android:layout_width="219dp"
            android:layout_height="53dp"
            android:layout_alignRight="@id/message_"
            android:layout_marginStart="0dp"
            android:layout_marginTop="0dp"
            android:alpha="0.56"
            android:background="@drawable/base_ek2_shape" >

            <TextView
                android:id="@+id/message_"
                android:layout_width="match_parent"
                android:layout_height="28dp"
                android:layout_gravity="center_vertical|end"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="18dp"
                android:fontFamily="@font/arialn"
                android:gravity="right"
                android:text="@string/____input_text_string_chat"
                android:textColor="@color/tenet_color"
                android:textSize="16sp" />
        </View>
    </View>
</androidx.constraintlayout.widget.ConstraintLayout>