<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout android:id="@+id/user_message_textbox"
        android:layout_marginTop="140dp"
        android:layout_marginStart="0dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        >


        <RelativeLayout android:id="@+id/______container_l_color"
            android:layout_marginTop="20dp"
            android:layout_marginStart="0dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            >

            <View
                android:id="@+id/______container_l_color_ek1"
                android:layout_width="395dp"
                android:layout_height="58dp"
                android:layout_marginStart="0dp"
                android:layout_marginTop="0dp"
                android:alpha="0.1"
                android:background="@drawable/______container_l_color_ek1_shape" />

        </RelativeLayout>

        <TextView android:id="@+id/____input_text"
            android:fontFamily="@font/arialn"
            android:textSize="16sp"
            android:textColor="@color/tenet_color"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="36dp"
            android:layout_width="191dp"
            android:layout_height="28dp"
            android:text="@string/____input_text_string_chat"
            />


        <RelativeLayout android:id="@+id/name_of_person_label"
            android:layout_marginTop="0dp"
            android:layout_marginStart="4dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            >

            <TextView android:id="@+id/____label"
                android:fontFamily="@font/agencyfb_bold"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="@color/tenet_color"
                android:layout_marginLeft="0dp"
                android:layout_marginTop="0dp"
                android:layout_width="68dp"
                android:layout_height="29dp"
                android:text="@string/____label_string_chat"
                />

        </RelativeLayout>


        <RelativeLayout android:id="@+id/____avatar"
            android:layout_marginTop="28dp"
            android:layout_marginStart="4dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            >


            <RelativeLayout android:id="@+id/_elements_avatar_a_image_"
                android:layout_marginTop="0dp"
                android:layout_marginStart="0dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                >

                <ImageView android:id="@+id/_8aa2afb239aa663c77ff68709b1fa250ef8f4920"
                    android:src="@drawable/_8aa2afb239aa663c77ff68709b1fa250ef8f4920"
                    android:contentDescription="_8aa2afb239aa663c77ff68709b1fa250ef8f4920"
                    android:layout_marginStart="0dp"
                    android:layout_marginTop="0dp"
                    android:layout_width="40dp"
                    android:layout_height="40dp" />

            </RelativeLayout>

        </RelativeLayout>

    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>